{
    "swagger": "2.0",
    "host": "localhost:8000",
    "basePath": "/essentials_kit_management/",
    "info": {
        "version": "1.0.0",
        "title": "Essentials Kit Management",
        "description": "Essential Kit management for the purchase of daily needs through online. "
    },
    "schemes": [
        "https",
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "Read Scope",
                "write": "Write Scope",
                "update": "Update Scope",
                "delete": "Delete Scope",
                "superuser": "SuperUser Scope"
            },
            "type": "oauth2"
        }
    },
    "definitions": {
        "UserCredentials": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "username",
                "password"
            ]
        }
    },
    "parameters": {
        "UserCredentialParameter": {
            "name": "username",
            "in": "body",
            "description": "The username of the user.",
            "schema": {
                "$ref": "#/definitions/UserCredentials"
            }
        }
    },
    "responses": {
        "SuccessResponse": {
            "description": "Success"
        },
        "BadRequestResponse": {
            "description": "BadRequest"
        },
        "NotFoundResponse": {
            "description": "NotFound"
        },
        "NoContentResponse": {
            "description": "No Content"
        },
        "UnauthorizedResponse": {
            "description": "Unauthorized"
        },
        "LoginSuccessResponse": {
            "description": "OK",
            "schema": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "access_token": {
                        "type": "string"
                    },
                    "refresh_token": {
                        "type": "string"
                    },
                    "expires_in": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "required": [
                    "user_id",
                    "access_token",
                    "refresh_token",
                    "expires_in"
                ]
            }
        }
    },
    "paths": {
        "/login/v1/": {
            "post": {
                "operationId": "login",
                "summary": "Login with User credentials",
                "description": "Login if the user credentials are valid if not return forbidden.",
                "security": [],
                "parameters": [{
                    "$ref": "#/parameters/UserCredentialParameter"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/LoginSuccessResponse"
                    },
                    "401": {
                        "$ref": "#/responses/UnauthorizedResponse"
                    }
                }
            }
        }
    }
}
